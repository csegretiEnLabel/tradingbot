# Trading mode: "paper" or "live"
# START WITH PAPER. Only switch to live when you're confident.
TRADING_MODE=paper

# Analysis interval in minutes
# Lower values (e.g., 5) mean more frequent trading decisions.
# Default is 60.
ANALYSIS_INTERVAL_MIN=5

# Strategy mode: "preservation" (capital-first) or "aggressive" (growth-first)
STRATEGY_MODE=preservation

# Optional: Set a daily budget cap for API costs (in USD)
DAILY_API_BUDGET=0.20

# â”€â”€ Quantitative Strategies (ported from prod_trade) â”€â”€â”€â”€â”€â”€
# These run alongside the existing technical analysis.
# The AI agent sees quant signals and factors them into decisions.

# KAMA (Kaufman Adaptive Moving Average) - adapts to market volatility
# When price crosses above KAMA = buy signal, below = sell signal
QUANT_KAMA_ENABLED=true

# Trend Following (SMA-3/SMA-20 crossover) - medium-term trend detection
# SMA-3 crossing above SMA-20 = buy, crossing below = sell
QUANT_TREND_ENABLED=true

# Momentum (rolling return ranking) - ranks watchlist by momentum strength
# Strong positive momentum = buy context, negative = sell context
QUANT_MOMENTUM_ENABLED=true

# Auto-trade mode: when true, quant buy signals can promote "hold" stocks
# to buy candidates for the AI to evaluate. When false, quant signals are
# shown to the AI as context only (advisory mode).
QUANT_AUTO_TRADE=true
